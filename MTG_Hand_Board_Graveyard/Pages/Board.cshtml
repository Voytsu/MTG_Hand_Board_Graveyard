@page
@model MTG_Hand_Board_Graveyard.Pages.BoardModel

@{
    ViewData["Title"] = "Board";
}

<h2>Board</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Card[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Card[0].Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Card[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Card[0].Lieu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Card) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lieu)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
